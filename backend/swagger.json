{
    "openapi": "3.0.3",
    "info": {
        "title": "My todo list",
        "description": "Documentation from Todo List api",
        "version": "1.0.0"
    },
    "basePath": "/",
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "paths": {
        "/user": {
            "description": "Cadastrar um user",
            "post": {
                "tags": [
                    "User"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "username": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "username": "exemplousuario",
                                    "password": "toscano123"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "400": {
                        "description": "This user already exist"
                    },
                    "400": {
                        "description": "username or password required"
                    },
                    "400": {
                        "description": "space not allowed"
                    },
                    "400": {
                        "description": "username or password shorts"
                    },
                    "202": {
                        "description": "Create user successfully"
                    }
                }
            }
        },
        "/user/login": {
            "post": {
                "description": "Fazer o login",
                "tags": [
                    "User"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "username": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "username": "airamtoscano",
                                    "password": "senha123"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "403": {
                        "description": "This user already not exist"
                    },
                    "200": {
                        "description": "TOKEN"
                    }
                }
            }
        }
    }
}